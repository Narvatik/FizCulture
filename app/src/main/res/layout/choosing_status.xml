<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:theme="@android:style/Theme.Black.NoTitleBar">

    <Button
        android:id="@+id/teachers_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/prepodavatel"
        android:gravity="fill_horizontal"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/students_button" />

    <Button
        android:id="@+id/students_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/student"
        android:gravity="fill_horizontal"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/teachers_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>